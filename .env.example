# FastAPI Xtrem - Environment Variables Example
# Copy this file to .env and adjust the values

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=False
API_VERSION=0.4.0

# Security
SECRET_KEY=change_this_to_a_secure_random_value
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
DATABASE_URL=sqlite:///./fastapi_xtrem.db
# For PostgreSQL, use format:
# DATABASE_URL=postgresql://user:password@localhost:5432/fastapi_xtrem

# Logging
LOG_LEVEL=INFO
LOG_PATH=logs
MAX_LOG_SIZE=10MB
LOG_ROTATION=1 day

# Email (for alerting)
SMTP_SERVER=smtp.yourdomain.com
SMTP_PORT=587
SMTP_USERNAME=alerts@yourdomain.com
SMTP_PASSWORD=your_password
SMTP_FROM=alertmanager@yourdomain.com
SMTP_TO=admin@yourdomain.com

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
ALERTMANAGER_PORT=9093
NODE_EXPORTER_PORT=9100

# Grafana credentials
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# Optional services
ENABLE_RATE_LIMITING=True
RATE_LIMIT_PER_MINUTE=60 